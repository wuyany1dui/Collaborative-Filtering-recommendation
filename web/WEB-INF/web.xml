<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- TestServlet -->
    <servlet>
        <servlet-name>testServlet</servlet-name>
        <servlet-class>com.ahr.film.servlet.TestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>testServlet</servlet-name>
        <url-pattern>/testServlet</url-pattern>
    </servlet-mapping>
    <!-- GetFavorFilmServlet -->
    <servlet>
        <servlet-name>getFavorFilmServlet</servlet-name>
        <servlet-class>com.ahr.film.servlet.GetFavorFilmServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getFavorFilmServlet</servlet-name>
        <url-pattern>/getFavorFilmServlet</url-pattern>
    </servlet-mapping>

    <!-- LoginServlet -->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.ahr.film.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- MainActivityServlet -->
    <servlet>
        <servlet-name>mainActivityServlet</servlet-name>
        <servlet-class>com.ahr.film.servlet.MainActivityServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>mainActivityServlet</servlet-name>
        <url-pattern>/mainActivityServlet</url-pattern>
    </servlet-mapping>

    <!-- RegisterUserServlet -->
    <servlet>
        <servlet-name>registerUserServlet</servlet-name>
        <servlet-class>com.ahr.film.servlet.RegisterUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registerUserServlet</servlet-name>
        <url-pattern>/registerUserServlet</url-pattern>
    </servlet-mapping>

    <!-- SaveUserServlet -->
    <servlet>
        <servlet-name>saveUserServlet</servlet-name>
        <servlet-class>com.ahr.film.servlet.SaveUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>saveUserServlet</servlet-name>
        <url-pattern>/saveUserServlet</url-pattern>
    </servlet-mapping>


</web-app>